<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color_light_blue"
    tools:context=".AdminPageFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add_course"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/main_button_medium_blue"
        android:text="@string/add_course"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textview_second2"
        app:layout_constraintStart_toStartOf="@+id/textview_second2"
        app:layout_constraintTop_toBottomOf="@+id/textview_second2"
        app:layout_constraintVertical_bias="0.032" />


    <TextView
        android:id="@+id/textview_second2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/welcome"
        android:textColor="@color/main_text_color_dark_blue"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/log_out_button_admin"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/main_button_medium_blue"
        android:text="@string/logout"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

    <TextView
        android:id="@+id/Course_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_list"
        android:textColor="@color/main_text_color_dark_blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textview_second2"
        app:layout_constraintTop_toBottomOf="@+id/button_add_course"
        app:layout_constraintVertical_bias="0.050000012" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/log_out_button_admin"
        app:layout_constraintEnd_toEndOf="@+id/textview_second2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textview_second2"
        app:layout_constraintTop_toBottomOf="@+id/Course_list_textView"
        app:layout_constraintVertical_bias="0.0">

        <ListView
            android:id="@+id/course_list"
            android:layout_width="325dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>